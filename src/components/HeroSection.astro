<section class="relative overflow-hidden py-20 lg:py-32">
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-secondary)]">
          Society of Information Technology Enthusiasts
        </span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-300 mb-10 font-light leading-relaxed">
        Empowering the next generation of tech leaders through innovation, collaboration, and code.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/join" class="btn-primary text-lg">
          Join SITE
        </a>
        <a href="/events" class="px-6 py-2 border border-[var(--color-primary)] text-[var(--color-primary)] font-bold rounded hover:bg-[var(--color-primary)]/10 transition-colors duration-200 text-lg">
          Upcoming Events
        </a>
      </div>
    </div>
  </div>
  
  {/* Background decoration */}
  <div class="absolute top-0 left-0 w-full h-full z-0 opacity-20 pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-[var(--color-secondary)] rounded-full blur-3xl mix-blend-screen animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-[var(--color-primary)] rounded-full blur-3xl mix-blend-screen animate-pulse" style="animation-delay: 2s;"></div>
  </div>
</section>
