---
import "./Hero.css";
---

<section class="hero">
  <div class="hero-bg-decoration">
    <div class="hero-blob hero-blob-1"></div>
    <div class="hero-blob hero-blob-2"></div>
  </div>
  <div class="hero-container">
    <h1 class="hero-title">
      <span class="hero-title-highlight">
        Society of Information Technology Enthusiasts
      </span>
    </h1>
    <p class="hero-description">
      Empowering the next generation of tech leaders through innovation,
      collaboration, and code.
    </p>
    <div class="hero-cta-container">
      <a href="/join" class="btn btn-primary"> Join SITE </a>
      <a href="/events" class="btn btn-secondary"> Upcoming Events </a>
    </div>
  </div>
</section>
