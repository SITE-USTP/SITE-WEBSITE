---
interface Props {
  title: string;
  date: Date;
  summary?: string;
  slug: string;
  image?: string;
}

const { title, date, summary, slug, image } = Astro.props;
---

<a href={`/blog/${slug}`} class="card block group h-full">
  {image && (
    <div class="aspect-video w-full overflow-hidden rounded-md mb-4">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
    </div>
  )}
  <div class="flex flex-col h-full justify-between">
    <div>
      <h3 class="text-xl font-bold mb-2 group-hover:text-[var(--color-primary)] transition-colors">{title}</h3>
      <p class="text-gray-400 text-sm mb-3">
        {date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
      {summary && <p class="text-gray-300 line-clamp-3">{summary}</p>}
    </div>
    <div class="mt-4 text-[var(--color-primary)] text-sm font-mono group-hover:translate-x-1 transition-transform">
      Read more &rarr;
    </div>
  </div>
</a>
